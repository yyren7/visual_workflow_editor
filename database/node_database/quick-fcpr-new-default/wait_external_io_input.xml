    <!-- 若 quickfcpr.md 优先，则 timeout 应为毫秒值，例如 timeout="300000" -->
    <field name="io_no">
      <!-- io_no (IO番号): IO模块的编号。 -->
      <!-- 有效范围: 1 ~ 10 -->
      <!-- 初期値: 1 -->
      <!-- 示例: 1 -->
    </field>
    <field name="input_pin_name">
      <!-- input_pin_name (入力ポート名): 等待的输入端口的名称或编号。 -->
      <!-- 有效范围: 参照各IO模块的规格 (例如 0 ~ 15) -->
      <!-- 初期値: 0 -->
      <!-- 示例: 0 -->
    </field>
    <field name="in_state">
      <!-- in_state (入力状態): 等待的输入状态。 -->
      <!-- 有效范围: on (输入ON), off (输入OFF) -->
      <!-- 初期値: on -->
      <!-- 示例: on -->
    </field>
