# 应用配置
SECRET_KEY=your_very_secret_key_here_for_jwt
DEBUG=1

# Python配置
# PYTHONDONTWRITEBYTECODE=1  # 注释：已在 devcontainer.json 中设置，无需重复
# 若使用Google AI时才需要
GOOGLE_API_KEY=your_google_ai_api_key_here_if_using_gemini
DATABASE_URL=postgresql://postgres:postgres@db:5432/flow_editor_db
ACTIVE_LLM_PROVIDER=deepseek # or gemini
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# DeepSeek API配置（用于LLM查询）
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# LMStudio Embedding API设置
# 注意: 项目已精简，只支持通过LMStudio API进行embedding计算
EMBEDDING_USE_LMSTUDIO=True
EMBEDDING_LMSTUDIO_API_BASE_URL=http://localhost:1234/v1
EMBEDDING_LMSTUDIO_API_KEY=

# 允许的CORS源，以逗号分隔
# 例如: http://localhost:3001,https://your-domain.com
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:8000,http://127.0.0.1:8000
# 如果需要允许所有源，可以设置为 CORS_ORIGINS=*

# SMB Configuration
SMB_HOST=your_smb_host_example
SMB_SHARE_LLM=your_smb_share_llm_example
SMB_SHARE_CONFIG=your_smb_share_config_example
SMB_USER_DOMAIN=your_smb_user_domain_example
SMB_USERNAME=your_smb_username_example
SMB_PASSWORD=your_smb_password_example

